<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/paleSpringBud</item>
        <item name="colorPrimaryDark">@color/paleSpringBudDark</item>
        <item name="colorAccent">@color/flame</item>

        <item name="colorOnBackground">@color/colorPrimary</item>
        <item name="colorSurface">@color/white</item>
    </style>

    <style name="Slider" parent="Widget.MaterialComponents.Slider">
        <item name="labelStyle">@style/SliderLabel</item>
    </style>

    <style name="SliderLabel" parent="Widget.MaterialComponents.Tooltip">
        <item name="android:textAppearance">@style/SliderLabelTextAppearance</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="SliderLabelTextAppearance">
        <item name="android:textSize">14.6sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColorLink">@color/white</item>
    </style>

    <style name="RoundedAdaptiveDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RoundedBottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="behavior_draggable">false</item>
        <item name="bottomSheetStyle">@style/RoundedBottomSheet</item>
    </style>

    <style name="RoundedBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/RoundedBottomSheetShape</item>
    </style>

    <style name="RoundedBottomSheetShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
    </style>

    <style name="RoundedShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">3dp</item>
    </style>

    <style name="RoundedShape.Dotted" parent="RoundedShape">
        <item name="android:dashGap">8dp</item>
    </style>

    <style name="RecordHeadacheDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="behavior_fitToContents">true</item>
        <item name="behavior_draggable">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="bottomSheetStyle">@style/RecordHeadacheDialog.BottomSheet</item>
    </style>

    <style name="RecordHeadacheDialog.BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="android:background">@drawable/bg_bottom_dialog_white_rounded</item>
    </style>

    <style name="TriggerChip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="closeIconVisible">false</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipBackgroundColor">@color/mtrl_trigger_chip_background</item>
        <item name="chipIconSize">16dp</item>
        <item name="chipIconTint">@color/blackOlive</item>
        <item name="android:textColor">@color/mtrl_trigger_chip_text</item>
    </style>

    <style name="DrugIntakeDefaultQuantityChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="closeIconVisible">false</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipBackgroundColor">@color/mtrl_trigger_chip_background</item>
        <item name="chipIconVisible">false</item>
        <item name="android:textColor">@color/mtrl_trigger_chip_text</item>
    </style>

    <style name="AuraToggleButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/mtrl_aura_button_background</item>
        <item name="android:textColor">@color/mtrl_aura_button_text_color</item>
    </style>

    <style name="ColoredMaterialAlert" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/AlertPositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertNeutralButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/AlertNeutralButton</item>
    </style>

    <style name="AlertPositiveButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/transparent</item>
        <item name="rippleColor">@color/flameDark</item>
        <item name="android:textColor">@color/flame</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AlertNeutralButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/transparent</item>
        <item name="rippleColor">@color/blackOliveDark</item>
        <item name="android:textColor">@color/blackOlive</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>