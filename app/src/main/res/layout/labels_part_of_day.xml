<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <revolver.headead.ui.views.typography.MontserratTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:id="@+id/night"
        android:textAlignment="center"
        android:text="@string/part_of_day_night"
        android:textColor="@color/secondaryText"
        android:textSize="12.8sp"
        app:textStyle="semiBold"/>

    <revolver.headead.ui.views.typography.MontserratTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:id="@+id/morning"
        android:textAlignment="center"
        android:text="@string/part_of_day_morning"
        android:textColor="@color/secondaryText"
        android:textSize="12.8sp"
        app:textStyle="semiBold"/>

    <revolver.headead.ui.views.typography.MontserratTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:id="@+id/afternoon"
        android:textAlignment="center"
        android:text="@string/part_of_day_afternoon"
        android:textColor="@color/secondaryText"
        android:textSize="12.8sp"
        app:textStyle="semiBold"/>

    <revolver.headead.ui.views.typography.MontserratTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:id="@+id/evening"
        android:textAlignment="center"
        android:text="@string/part_of_day_evening"
        android:textColor="@color/secondaryText"
        android:textSize="12.8sp"
        app:textStyle="semiBold"/>

</LinearLayout>