<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="448dp"
    android:orientation="vertical">

    <revolver.headead.ui.views.typography.MontserratTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/fragment_date_picker_start_title"
        android:textSize="12.8sp"
        android:textAllCaps="true"
        app:textStyle="semiBold"/>

    <revolver.headead.ui.views.MaterialCalendarView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_date_picker_calendar"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="48dp"/>

    <revolver.headead.ui.views.typography.MontserratTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="24dp"
        android:id="@+id/fragment_date_picker_label"
        android:focusable="true"
        android:clickable="true"
        android:padding="4dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:text="@string/fragment_date_picker_label"
        android:textColor="@color/flameDark"
        android:textSize="12.8sp"
        android:textAllCaps="true"
        app:textStyle="semiBold"/>

</FrameLayout>