<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/fragment_datetime_picker_expanded"
        android:alpha="0">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:id="@+id/toolbar"
                app:title="@string/fragment_datetime_picker_2_preset_just_ended_title"
                app:navigationIcon="@drawable/ic_arrow_back_dark"/>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="16dp"
                        android:background="@android:color/transparent"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="16dp"
                        android:id="@+id/fragment_datetime_picker_ongoing_selector"
                        android:background="@android:color/transparent"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="16dp"
                        android:background="@color/paleSpringBudDark"/>

                </LinearLayout>

                <revolver.headead.ui.views.typography.MontserratTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="24dp"
                    android:text="@string/fragment_datetime_picker_date_header"
                    android:textSize="13.8sp"
                    android:textAllCaps="true"
                    app:textStyle="semiBold"/>

                <revolver.headead.ui.views.MaterialCalendarView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/fragment_datetime_picker_date"
                    android:layout_margin="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="16dp">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/fragment_datetime_picker_time_header_radio"
                        android:checked="true"/>

                    <revolver.headead.ui.views.typography.MontserratTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="-6dp"
                        android:id="@+id/fragment_datetime_picker_time_header"
                        android:text="@string/fragment_datetime_picker_time_header"
                        android:textSize="13.8sp"
                        android:textAllCaps="true"
                        app:textStyle="semiBold"/>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/fragment_datetime_picker_time_container">

                    <revolver.headead.ui.views.MaterialTimePickerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/fragment_datetime_picker_time"
                        android:layout_margin="8dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#aafafafa"
                        android:id="@+id/fragment_datetime_picker_time_dimmer"
                        android:focusable="true"
                        android:clickable="true"
                        android:visibility="gone"/>

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="16dp">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/fragment_datetime_picker_part_of_day_header_radio"/>

                    <revolver.headead.ui.views.typography.MontserratTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="-6dp"
                        android:id="@+id/fragment_datetime_picker_part_of_day_header"
                        android:text="@string/fragment_datetime_picker_part_of_day_header"
                        android:textSize="13.8sp"
                        android:textAllCaps="true"
                        app:textStyle="semiBold"/>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/fragment_datetime_picker_part_of_day_container">

                    <revolver.headead.ui.views.PartOfDayPickerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:id="@+id/fragment_datetime_picker_part_of_day"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#aafafafa"
                        android:focusable="true"
                        android:clickable="true"
                        android:id="@+id/fragment_datetime_picker_part_of_day_dimmer"/>

                </FrameLayout>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_margin="24dp"
                    android:id="@+id/fragment_datetime_picker_expanded_confirm"
                    android:text="@string/fragment_datetime_picker_confirm"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_regular"
                    app:backgroundTint="@color/flame"/>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:paddingVertical="8dp"
        android:id="@+id/fragment_datetime_picker_collapsed"
        android:orientation="vertical">

        <revolver.headead.ui.views.typography.MontserratTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/fragment_datetime_picker_2_presets_header"
            android:textSize="12.8sp"
            android:textAllCaps="true"
            app:textStyle="semiBold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingVertical="8dp"
            android:focusable="true"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:id="@+id/fragment_datetime_picker_2_preset_just_started">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="16dp"
                android:src="@drawable/ic_timespan_start"
                android:contentDescription="@string/cd_fragment_datetime_picker_2_preset_just_started"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment_datetime_picker_2_preset_just_started_header"
                    android:textColor="@color/primaryText"
                    android:textSize="16.8sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment_datetime_picker_2_preset_just_started_description"
                    android:textColor="@color/secondaryText"
                    android:textSize="13.8sp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingVertical="8dp"
            android:focusable="true"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:id="@+id/fragment_datetime_picker_2_preset_just_ended">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="16dp"
                android:src="@drawable/ic_timespan_end"
                android:contentDescription="@string/cd_fragment_datetime_picker_2_preset_just_ended"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment_datetime_picker_2_preset_just_ended_header"
                    android:textColor="@color/primaryText"
                    android:textSize="16.8sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment_datetime_picker_2_preset_just_ended_description"
                    android:textColor="@color/secondaryText"
                    android:textSize="13.8sp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingVertical="8dp"
            android:focusable="true"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:id="@+id/fragment_datetime_picker_2_preset_past_episode">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="16dp"
                android:src="@drawable/ic_timespan_past"
                android:contentDescription="@string/cd_fragment_datetime_picker_2_preset_past_episode"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment_datetime_picker_2_preset_past_episode_header"
                    android:textColor="@color/primaryText"
                    android:textSize="16.8sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment_datetime_picker_2_preset_past_episode_description"
                    android:textColor="@color/secondaryText"
                    android:textSize="13.8sp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>