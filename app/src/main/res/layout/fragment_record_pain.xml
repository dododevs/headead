<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/toolbar"
            android:background="@color/white"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            app:title="@string/fragment_record_pain_title"
            app:navigationIcon="@drawable/ic_arrow_back_dark"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="48dp"
            tools:ignore="UseCompoundDrawables">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="0dp"
                app:cardElevation="2.8dp"
                app:contentPadding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_margin="8dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_headache_location"
                            android:contentDescription="@string/cd_headache_location"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="8dp"
                            android:text="@string/fragment_record_pain_location_header"
                            android:textColor="@color/iconGray"
                            android:textSize="13.6sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="72dp"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="48dp"
                            android:scaleX="-1"
                            android:id="@+id/fragment_record_pain_location_head_1"
                            android:src="@drawable/ic_head_full"
                            android:contentDescription="@string/cd_head"/>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="72dp"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="48dp"
                            android:id="@+id/fragment_record_pain_location_head_2"
                            android:src="@drawable/ic_head_full"
                            android:contentDescription="@string/cd_head"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/fragment_record_pain_location_sx"
                        android:focusable="true"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:text="@string/fragment_record_pain_location_sx_short"
                            android:textSize="12.8sp"
                            android:textColor="@color/secondaryText"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:layout_gravity="center_vertical"
                            android:paddingVertical="16dp"
                            android:text="@string/fragment_record_pain_location_sx_long"
                            android:textSize="14.8sp"
                            android:textColor="@color/black"/>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="24dp"
                            android:layout_weight="0.2"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="16dp"
                            android:id="@+id/fragment_record_pain_location_sx_selected"
                            android:src="@drawable/ic_done"
                            android:visibility="invisible"
                            android:contentDescription="@string/cd_selected"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/fragment_record_pain_location_dx"
                        android:focusable="true"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:text="@string/fragment_record_pain_location_dx_short"
                            android:textSize="12.8sp"
                            android:textColor="@color/secondaryText"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:layout_gravity="center_vertical"
                            android:paddingVertical="16dp"
                            android:text="@string/fragment_record_pain_location_dx_long"
                            android:textSize="14.8sp"
                            android:textColor="@color/black"/>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="24dp"
                            android:layout_weight="0.2"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="16dp"
                            android:id="@+id/fragment_record_pain_location_dx_selected"
                            android:src="@drawable/ic_done"
                            android:visibility="invisible"
                            android:contentDescription="@string/cd_selected"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/fragment_record_pain_location_front"
                        android:focusable="true"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:text="@string/fragment_record_pain_location_front_short"
                            android:textSize="12.8sp"
                            android:textColor="@color/secondaryText"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:layout_gravity="center_vertical"
                            android:paddingVertical="16dp"
                            android:text="@string/fragment_record_pain_location_front_long"
                            android:textSize="14.8sp"
                            android:textColor="@color/black"/>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="24dp"
                            android:layout_weight="0.2"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="16dp"
                            android:id="@+id/fragment_record_pain_location_front_selected"
                            android:src="@drawable/ic_done"
                            android:visibility="invisible"
                            android:contentDescription="@string/cd_selected"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/fragment_record_pain_location_back"
                        android:focusable="true"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:text="@string/fragment_record_pain_location_back_short"
                            android:textSize="12.8sp"
                            android:textColor="@color/secondaryText"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:layout_gravity="center_vertical"
                            android:paddingVertical="16dp"
                            android:text="@string/fragment_record_pain_location_back_long"
                            android:textSize="14.8sp"
                            android:textColor="@color/black"/>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="24dp"
                            android:layout_weight="0.2"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="16dp"
                            android:id="@+id/fragment_record_pain_location_back_selected"
                            android:src="@drawable/ic_done"
                            android:visibility="invisible"
                            android:contentDescription="@string/cd_selected"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingBottom="8dp"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="0dp"
                app:cardElevation="2.8dp"
                app:contentPadding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_margin="8dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_headache_intensity"
                            android:contentDescription="@string/cd_headache_intensity"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="8dp"
                            android:text="@string/fragment_record_pain_intensity_header"
                            android:textColor="@color/iconGray"
                            android:textSize="13.6sp"/>

                    </LinearLayout>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/fragment_record_pain_intensity_slider"
                        style="@style/Slider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="16dp"
                        android:stepSize="1.0"
                        android:valueFrom="0"
                        android:valueTo="2"
                        app:labelBehavior="floating"
                        app:labelStyle="@style/SliderLabel"
                        app:thumbColor="@color/white"
                        app:thumbElevation="4dp"
                        app:tickColor="@color/white"
                        app:trackColor="@color/pastelGreen"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingBottom="8dp"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="0dp"
                app:cardElevation="2.8dp"
                app:contentPadding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_margin="8dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_headache_type"
                            android:contentDescription="@string/cd_headache_type"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="8dp"
                            android:text="@string/fragment_record_pain_type_header"
                            android:textColor="@color/iconGray"
                            android:textSize="13.6sp"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginHorizontal="8dp"
                            android:src="@drawable/ic_info"
                            android:focusable="true"
                            android:clickable="true"
                            android:padding="4dp"
                            android:background="?attr/selectableItemBackground"
                            android:id="@+id/fragment_record_pain_type_info"
                            android:contentDescription="@string/cd_info"/>

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="16dp"
                        android:gravity="center_horizontal"
                        android:id="@+id/fragment_record_pain_types"
                        app:selectionRequired="true"
                        app:singleSelection="true">

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/fragment_record_pain_type_a"
                            android:text="@string/fragment_record_pain_type_a_short"
                            android:padding="8dp"
                            style="?attr/materialButtonOutlinedStyle"
                            app:icon="@drawable/ic_head_pain_type_a"
                            app:iconGravity="top"
                            app:iconSize="24dp"
                            app:iconTint="@color/iconGray"/>

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/fragment_record_pain_type_b"
                            android:text="@string/fragment_record_pain_type_b_short"
                            android:padding="8dp"
                            style="?attr/materialButtonOutlinedStyle"
                            app:icon="@drawable/ic_head_pain_type_b"
                            app:iconGravity="top"
                            app:iconSize="24dp"
                            app:iconTint="@color/iconGray"/>

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/fragment_record_pain_type_c"
                            android:text="@string/fragment_record_pain_type_c_short"
                            android:padding="8dp"
                            style="?attr/materialButtonOutlinedStyle"
                            app:icon="@drawable/ic_head_pain_type_c"
                            app:iconGravity="top"
                            app:iconSize="24dp"
                            app:iconTint="@color/iconGray"/>

                    </com.google.android.material.button.MaterialButtonToggleGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_arrow_forward_light"
        android:tint="@color/white"
        android:id="@+id/fab"
        android:focusable="true"
        android:clickable="true"
        app:fabSize="normal"
        app:backgroundTint="@color/colorAccent"
        app:elevation="6dp"
        app:pressedTranslationZ="6dp"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>