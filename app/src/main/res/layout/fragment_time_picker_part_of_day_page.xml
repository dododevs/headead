<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="230dp">

    <revolver.headead.ui.views.typography.MontserratTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/fragment_time_picker_part_of_day_page_title"
        android:text="@string/fragment_time_picker_start_title"
        android:textSize="12.8sp"
        android:textAllCaps="true"
        app:textStyle="semiBold"/>

    <revolver.headead.ui.views.PartOfDayPickerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="8dp"
        android:id="@+id/part_of_day_picker"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_margin="16dp"
        android:id="@+id/fragment_time_picker_mode_switch"
        android:text="@string/fragment_time_picker_use_clock"
        android:textColor="@color/flameDark"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:focusable="true"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:padding="4dp"/>

</FrameLayout>