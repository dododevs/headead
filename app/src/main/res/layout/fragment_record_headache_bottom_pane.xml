<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:orientation="vertical">

        <revolver.headead.ui.views.typography.MontserratTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:layout_margin="8dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableStart="@drawable/ic_chevron_down"
            android:drawablePadding="2dp"
            android:focusable="true"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:id="@+id/fragment_record_headache_bottom_pane_more"
            android:text="@string/fragment_record_headache_bottom_pane_more"
            android:textAllCaps="true"
            android:textColor="@color/blackOlive"
            android:textSize="12.8sp"
            app:textStyle="semiBold" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_margin="24dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="@string/fragment_record_headache_bottom_pane_next"
            android:id="@+id/fragment_record_headache_bottom_pane_next"
            android:fontFamily="@font/roboto_regular"
            app:backgroundTint="@color/flame"
            app:cornerRadius="8dp"/>

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1024dp"/>

</LinearLayout>